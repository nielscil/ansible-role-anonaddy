TZ={{ anonaddy_timezone }}
PUID={{ anonaddy_uid }}
PGID={{ anonaddy_gid }}
LISTEN_IPV6={{ anonaddy_listen_ipv6 }}
REAL_IP_FROM={{ anonaddy_real_ip_from }}

APP_NAME={{ anonaddy_name }}
APP_KEY={{ anonaddy_key }}
APP_URL={{ anonaddy_app_url }}

ANONADDY_ENABLE_REGISTRATION={{ anonaddy_enable_registration }}

ANONADDY_DOMAIN={{ anonaddy_domain }}
ANONADDY_HOSTNAME={{ anonaddy_mail_hostname }}
ANONADDY_ALL_DOMAINS={{ anonaddy_all_domains | join(',') }}

ANONADDY_SECRET={{ anonaddy_secret }}

ANONADDY_LIMIT={{ anonaddy_limit_email_forward_and_reply }}
ANONADDY_BANDWIDTH_LIMIT={{ anonaddy_limit_bandwidth }}
ANONADDY_NEW_ALIAS_LIMIT={{ anonaddy_limit_new_aliases }}
ANONADDY_ADDITIONAL_USERNAME_LIMIT={{ anonaddy_limit_additional_username_limit }}

{% if anonaddy_dkim_signing_key != '' %}
ANONADDY_DKIM_SIGNING_KEY=/data/dkim/{{ anonaddy_domain }}.private
{% endif %}
ANONADDY_DKIM_SELECTOR={{ anonaddy_dkim_selector }}

{% if anonaddy_gpg_signing_key_fingerprint != '' %}
ANONADDY_SIGNING_KEY_FINGERPRINT={{ anonaddy_gpg_signing_key_fingerprint }}
{% endif %}

DB_HOST={{ anonaddy_database_hostname }}
DB_PORT={{ anonaddy_database_port }}
DB_DATABASE={{ anonaddy_database_name }}
DB_USERNAME={{ anonaddy_database_username }}
DB_PASSWORD={{ anonaddy_database_password }}

REDIS_HOST={{ anonaddy_redis_host }}
REDIS_PORT{{ anonaddy_redis_port }}
{% if anonaddy_redis_password != '' %}
REDIS_PASSWORD={{ anonaddy_redis_password }}
{% endif %}

MAIL_FROM_NAME={{ anonaddy_mail_from_name }}
MAIL_FROM_ADDRESS={{ anonaddy_mail_from_address }}
{% if anonaddy_mail_encryption != '' %}
MAIL_ENCRYPTION={{ anonaddy_mail_encryption }}
{% endif %}

{% if anonaddy_relayhost != '' %}
POSTFIX_RELAYHOST={{ anonaddy_relayhost }}:{{ anonaddy_relayport }}
POSTFIX_RELAYHOST_AUTH_ENABLE={{ anonaddy_relay_username != '' }}
POSTFIX_RELAYHOST_USERNAME={{ anonaddy_relay_username }}
POSTFIX_RELAYHOST_PASSWORD={{ anonaddy_relay_password }}
{% endif %}

{% if anonaddy_spamhaus_dqs_key != '' %}
POSTFIX_SPAMHAUS_DQS_KEY={{ anonaddy_spamhaus_dqs_key }}
{% endif %}

{% if anonaddy_rspamd_enabled %}
RSPAMD_ENABLE=true
{% endif %}

{% if anonaddy_rspamd_password != '' %}
RSPAMD_WEB_PASSWORD={{ anonaddy_rspamd_password }}
{% endif %}

